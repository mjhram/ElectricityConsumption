<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnSpan="2"
            >

                <TextView
                    android:id="@+id/tvTimeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="right"
                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="الوقت:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:layoutDirection="rtl"
                    android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="تاريخ القراءة السابقة:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvPrevDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="القراءة السابقة:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvPrevReading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="تاريخ القراءة اللاحقة:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvNextDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="القراءة اللاحقة:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvNextReading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnSpan="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="المبلغ:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="الوحدت:"
                    android:textColor="@android:color/white"

                    />

                <TextView
                    android:id="@+id/tvUnitsString"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="عدد الايام:"
                    android:textColor="@android:color/white"

                    />
                <TextView
                    android:id="@+id/tvDaysString"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="right"
                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="الية حساب المبلغ:"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvCalcString"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="ورقة كهرباء؟"
                    android:textColor="@android:color/white"

                    />
                <TextView
                    android:id="@+id/tvIsItBillString"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="---"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="ازالة القراءة"
            android:layout_columnSpan="2"
            android:focusable="false"
            />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>